@model List<Court>
@{
    ViewData["Title"] = "Available Courts";
}

<div class="data-container">
    <h2 class="mb-4">Available Courts</h2>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-header">
                <tr>
                    <th>Court Number</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var court in Model)
                {
                    <tr>
                        <td>Court @court.CourtNumber</td>
                        <td>@court.Location</td>
                        <td>
                            <a asp-controller="Rental" asp-action="Create" 
                               asp-route-courtNumber="@court.CourtNumber"
                               asp-route-rentalDate="@ViewBag.RentalDate"
                               asp-route-startTime="@ViewBag.StartTime"
                               asp-route-duration="@ViewBag.Duration"
                               class="btn btn-success btn-sm">
                                <i class="fas fa-calendar-check me-2"></i>Book Now
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a asp-controller="Rental" asp-action="Availability" 
           class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>New Search
        </a>
    </div>
</div>

<style>
    .data-container {
        max-width: 1200px;
        margin: 2% auto;
        padding: 2rem;
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .table-header {
        background-color: #28a745;
        color: white;
    }
    .table td, .table th {
        vertical-align: middle;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">