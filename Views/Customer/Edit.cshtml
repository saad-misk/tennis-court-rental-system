@model TennisCourtRentalSystem.Models.Rental
@{
    ViewData["Title"] = "Edit Rental";
    Layout = "_Layout";
}

<h1>Edit Rental</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="RentalId" />
    <div class="row">
        <!-- Similar structure to Create.cshtml, but with existing values -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CourtNumber" class="control-label">Court</label>
                <select asp-for="CourtNumber" class="form-control" asp-items="ViewBag.Courts"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentalDate" class="control-label"></label>
                <input asp-for="RentalDate" type="date" class="form-control" />
            </div>
            <!-- Include other fields like StartTime, EndTime, etc. -->
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PaymentStatus" class="control-label"></label>
                <select asp-for="PaymentStatus" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Paid">Paid</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <!-- Include RentalFee, ExpectedAttendance, etc. -->
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>