@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="data-container">
    <div class="text-center confirmation-content">
        <div class="confirmation-icon">
            <i class="fas fa-check-circle text-success"></i>
        </div>
        <h1 class="confirmation-title">Booking Confirmed!</h1>
        <div class="confirmation-message">
            @Html.Raw(ViewBag.Message)
        </div>
        <div class="confirmation-details mt-4">
            <p class="text-muted">
                <i class="fas fa-info-circle me-2"></i>
                Please complete your payment within 24 hours to secure your booking
            </p>
        </div>
        <div class="mt-5">
            <a asp-controller="Customer" asp-action="Dashboard" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>Return to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .data-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 3rem;
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .confirmation-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
        animation: bounce 1s ease-in-out;
    }

    .confirmation-title {
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .confirmation-message {
        font-size: 1.25rem;
        color: #4a5568;
        line-height: 1.6;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    @@media (max-width: 768px) {
        .data-container {
            padding: 2rem;
            margin: 1rem;
        }
        
        .confirmation-icon {
            font-size: 3.5rem;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">