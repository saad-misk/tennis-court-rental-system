@using TennisCourtRentalSystem.Models;
@model Rental

<h2>Delete Rental</h2>

<p>Are you sure you want to delete this rental?</p>

<div>
    <dl>
        <dt>Court Number</dt>
        <dd>@Model.CourtNumber</dd>
        <dt>Date</dt>
        <dd>@Model.RentalDate.ToShortDateString()</dd>
        <dt>Time</dt>
        <dd>@Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="RentalId" />
    <button type="submit">Confirm Delete</button>
</form>